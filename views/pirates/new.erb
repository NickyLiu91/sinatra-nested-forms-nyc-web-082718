  <label>Pirate</label>
    <p><input type="text" name="pirate[name]" />Name</p>
    <p><input type="integer" name="pirate[weight]" />Weight</p>
    <p><input type="integer" name="pirate[height]" />Height</p>

  <label>First Ship</label>
