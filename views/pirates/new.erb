    <p><input id="ship_booty_1" type="integer" name="pirate[ships][][booty]" />Booty</p>

  <label>Second Ship</label>
    <p><input id="ship_name_2" type="text" name="pirate[ships][][name]" />Name</p>
    <p><input id="ship_type_2" type="text" name="pirate[ships][][type]" />Type</p>
    <p><input id="ship_booty_2" type="integer" name="pirate[ships][][booty]" />Booty</p>

  <input id="Submit" type="submit" value="submit"/>
</form>
